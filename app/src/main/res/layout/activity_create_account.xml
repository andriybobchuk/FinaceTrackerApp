<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/burger_marginLeft"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Design an account"
            android:fontFamily="@font/segoeuib"
            android:textSize="25sp"
            android:textColor="@color/headline_text_color"
            android:layout_marginBottom="30dp"
            />

        <Spinner
            android:id="@+id/sType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:theme="@style/SpinnerTheme"
            />

        <Spinner
            android:id="@+id/sCurrency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:theme="@style/SpinnerTheme"
            />

        <EditText
            android:id="@+id/etBalance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="0.00"
            android:textSize="24sp"
            android:inputType="numberDecimal"
            android:fontFamily="@font/segoeuib"
            android:background="@android:color/transparent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="12dp"
            android:theme="@style/BigEditTextTheme"
            />


        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textAutoComplete"
            android:textColor="@color/primary_text_color"
            android:hint="Account Name"
            android:layout_marginTop="8dp"
            android:theme="@style/EditTextTheme"
            />

        <LinearLayout
            android:id="@+id/ll_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="5dp">

            <View
                android:id="@+id/v_color"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/circular_view"
                />

            <TextView
                android:id="@+id/tv_select_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="20dp"
                android:textSize="15sp"
                android:fontFamily="@font/segoeui"
                android:padding="0dp"
                android:text="Change color"
                android:textColor="@color/primary_text_color" />

        </LinearLayout>






        <Button
            android:id="@+id/btnAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="25dp"
            android:paddingVertical="10dp"
            android:background="@drawable/button_dark"
            android:fontFamily="@font/segoeuib"
            android:text="Finish"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_marginBottom="45dp"
            android:layout_marginTop="40dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>