<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="45dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete this category?"
            android:fontFamily="@font/segoeuib"
            android:textSize="25sp"
            android:textColor="@color/headline_text_color"
            android:layout_marginBottom="30dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In order to avoid breaking the database's logic, the only action you can perform on existing categories is deleting. "
            android:fontFamily="@font/segoeui"
            android:textSize="15sp"
            android:textColor="@color/headline_text_color"
            android:layout_marginBottom="30dp"
            />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="25dp"
            android:paddingVertical="10dp"
            android:background="@drawable/button_dark"
            android:fontFamily="@font/segoeuib"
            android:text="Delete"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_marginBottom="55dp"
            android:layout_marginTop="10dp"/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>