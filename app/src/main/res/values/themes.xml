<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyRoomDemo" parent="@style/Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/headline_text_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_color</item>
        <item name="colorSecondaryVariant">@color/accent_color</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Customize your theme here. -->
        <!-- Status bar color (+ modified iconsColor but in v23 file). -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Navigation bar color (+ modified in v27 file). -->
        <item name="android:navigationBarColor">@color/tab_bar_color</item>

        <!-- Colors for EditText etc. -->
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/accent_color</item>
        <item name="colorControlHighlight">@color/accent_color</item>

        <!-- For transparent status bar -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:fitsSystemWindows">false</item>

    </style>

    <style name="Theme_Dialog" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">97%</item>
        <item name="android:windowMinWidthMinor">97%</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/tab_bar_color</item>
    </style>

    <style name="SpinnerTheme">
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:fontFamily">@font/segoeui</item>
        <item name="android:textSize">17sp</item>

        <item name="colorAccent">@color/accent_color</item>
        <item name="colorControlNormal">@color/spinner_color</item>
    </style>

    <style name="EditTextTheme" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">@color/accent_color</item>
        <item name="colorControlNormal">@color/spinner_color</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:fontFamily">@font/segoeui</item>
        <item name="android:textSize">15sp</item>
        <item name="paddingBottomNoButtons">4dp</item>
    </style>

    <style name="BigEditTextTheme" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">@color/accent_color</item>
        <item name="colorControlNormal">@color/spinner_color</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:fontFamily">@font/segoeuib</item>
    </style>




</resources>